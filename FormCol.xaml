<Window x:Class="SEC_Control.FormCol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEC_Control"
        mc:Ignorable="d" Height="98.5" Width="150" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <StackPanel>
            <Label Name="label" Content="Количество" HorizontalContentAlignment="Center" Margin="0,0,0,0" FontSize="20"/>
            <TextBox Name="textB" Margin="0,0" TextWrapping="Wrap" FontSize="20"/>
            <Grid Margin="0">
                <Button Content="Ок" Margin="0,0,0,0" HorizontalAlignment="Left" FontSize="20" Click="Button_Click"/>
                <Button Content="Отмена" HorizontalAlignment="Right" IsCancel="True" FontSize="20"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
