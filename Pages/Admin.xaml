<Page x:Class="SEC_Control.Pages.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEC_Control.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="382*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Label x:Name="login" Content="" HorizontalContentAlignment="Center" Grid.Row="0" Margin="0" FontSize="16"/>
        <Button Content="Выход" HorizontalAlignment="Right" Padding="0,0,0,0"  Grid.Column="2" Margin="0,0,0,0" Width="100" FontSize="16" Click="Button_Click"/>
        <ListBox x:Name="List1" Grid.Column="1"  Margin="0,0,0,30" Grid.Row="1" FontSize="20" Grid.RowSpan="2" SelectionChanged="List1_SelectionChanged"/>
        <Button Content="+" Grid.Column="1" Margin="0,0,0,0" Grid.Row="2" FontSize="20"/>
        <ListBox x:Name="list2" Grid.Column="2" Margin="0,0,0,30" Grid.Row="1" Grid.RowSpan="2"/>
        <Button Content="+" Grid.Column="2" Margin="0,0,0,0" Grid.Row="2" FontSize="20"/>

    </Grid>
</Page>
